# Docker Environment Configuration
# Copy this to .env.docker and customize as needed

# Database Configuration
DATABASE_URL=sqlite:///./wizdata.db
# For PostgreSQL:
# DATABASE_URL=postgresql://wizdata:wizdata_password@postgres:5432/wizdata

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Application Configuration
FLASK_ENV=production
SECRET_KEY=your-secret-key-change-in-production-use-a-long-random-string
DEBUG=false

# API Keys (Optional - set these for full functionality)
# OPENAI_API_KEY=your-openai-api-key-here
# ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key-here
# SP_GLOBAL_API_KEY=your-sp-global-key-here
# BLOOMBERG_API_KEY=your-bloomberg-key-here
# REFINITIV_API_KEY=your-refinitiv-key-here
# REFINITIV_API_SECRET=your-refinitiv-secret-here

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_REQUESTS=200

# Monitoring Configuration
LOG_LEVEL=INFO
METRICS_ENABLED=true
